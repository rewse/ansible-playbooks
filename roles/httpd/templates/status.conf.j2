    ExtendedStatus On

    <Location /server-status>
        SetHandler server-status

        Require ip 192.168.0.0/16 10.0.0.0/16 {{ global_ip.home }} {{ global_ip.office }} {{ ipv6.home }} {{ ipv6.aws }}
    </Location>
</IfModule>

