network:
  version: 2
  ethernets:
    eth0:
      dhcp4: false
      dhcp6: false
  wifis:
    wlan0:
      dhcp4: false
      dhcp6: false
      access-points:
        xray:
          password: {{ xray_password }}
  bonds:
    bond0:
      interfaces:
        - eth0
        - wlan0
      parameters:
        mode: active-backup
        primary: eth0
        arp-interval: 1000
        arp-ip-targets:
          - {{ default_gateway }}
      dhcp4: false
      dhcp6: true
      optional: true
      addresses:
         - {{ local.ip }}/24
      gateway4: {{ default_gateway }}
      nameservers:
        search:
          - rewse.jp
        addresses:
          - {{ resolved1.ip }}
          - {{ resolved2.ip }}
          - {{ resolved1.ipv6 }}
          - {{ resolved2.ipv6 }}
