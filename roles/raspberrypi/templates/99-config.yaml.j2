network:
  version: 2
  ethernets:
    eth0:
      dhcp4: false
      dhcp6: false
      optional: true
      addresses:
         - {{ local.ip }}/24
         - {{ local.ipv6 }}/64
      routes:
        - to: default
          via: {{ default_gateway }}
        - to: default
          via: {{ default_gateway6 }}
      nameservers:
        addresses:
          - {{ resolved1.ip }}
          - {{ resolved2.ip }}
          - {{ resolved1.ipv6 }}
          - {{ resolved2.ipv6 }}
        search:
          - rewse.jp
  wifis:
    wlan0:
      access-points:
        xray:
          password: {{ xray_password }}
      dhcp4: false
      dhcp6: false
      optional: true
      addresses:
         - {{ local.ip_2 }}/24
         - {{ local.ipv6_2 }}/64
