network:
  version: 2
  ethernets:
    eth0:
      dhcp4: false
      dhcp6: false
  wifis:
    wlan0:
      dhcp4: false
      dhcp6: false
      access-points:
        xray:
          password: {{ xray_password }}
  bonds:
    bond0:
      interfaces:
        - eth0
        - wlan0
      parameters:
        mode: active-backup
        primary: eth0
        arp-interval: 1000
        arp-ip-targets:
          - 192.168.0.1
      dhcp4: false
      dhcp6: true
      optional: true
      addresses:
         - {{ local_ip }}/24
      gateway4: 192.168.0.1
      nameservers:
        search:
          - rewse.jp
        addresses:
          - 192.168.0.1
          - 8.8.8.8
