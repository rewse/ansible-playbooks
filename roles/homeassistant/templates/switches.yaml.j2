      command_off: 'curl -X POST -H "Authorization: Bearer {{ remo_token }}" -d "button=power-off" https://api.nature.global/1/appliances/7f2794cf-eb73-45ea-a08e-c8b8adcab62c/aircon_settings'
      command_state: "false"
      friendly_name: "Living Room AC Cleaner"
