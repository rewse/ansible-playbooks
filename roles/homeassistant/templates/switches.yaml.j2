- platform: command_line
  switches:
    bedroom_curtains:
      command_on: 'curl -X POST -H "Authorization: {{ switchbot_token }}" -H "Content-Type: application/json" -d "{\"command\": \"turnOn\"}" https://api.switch-bot.com/v1.0/devices/E9A417DB5E33/commands'
      command_off: 'curl -X POST -H "Authorization: {{ switchbot_token }}" -H "Content-Type: application/json" -d "{\"command\": \"turnOff\"}" https://api.switch-bot.com/v1.0/devices/E9A417DB5E33/commands'
      friendly_name: "Bedroom Curtains"
    living_room_ac_cleaner:
