settings {
  insist = true,
  logfile = "/var/log/lsyncd/lsyncd.log",
  statusFile = "/var/log/lsyncd/lsyncd.status",
  pidfile = "/var/run/lsyncd.pid"
}

{% if ansible_hostname == "charlie" %}
sync {
  default.rsync,
  source="/srv/www",
  target="srv2.rewse.jp::www"
}
{% endif %}

sync {
  default.rsync,
  source="/srv/mailman/etc",
{% if ansible_hostname == "charlie" %}
  target="srv2.rewse.jp::mailman-etc",
{% elif ansible_hostname == "foxtrot" %}
  target="srv1.rewse.jp::mailman-etc",
{% endif %}
  init = false
}

sync {
  default.rsync,
  source="/srv/mailman/var",
{% if ansible_hostname == "charlie" %}
  target="srv2.rewse.jp::mailman-var",
{% elif ansible_hostname == "foxtrot" %}
  target="srv1.rewse.jp::mailman-var",
{% endif %}
  init = false
}

{% for user in users %}
sync {
  default.rsync,
  source="/srv/mail/{{user}}",
{% if ansible_hostname == "charlie" %}
  target="srv2.rewse.jp::mail-{{user}}",
{% elif ansible_hostname == "foxtrot" %}
  target="srv1.rewse.jp::mail-{{user}}",
{% endif %}
  init = false
}

{% endfor %}
